<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Dialog
        id="ShowRejectDialog"
        title="반려 사유">
        <content>
            <form:SimpleForm
                id="ShowRejectForm"
                editable="true"
                layout="ResponsiveGridLayout">
                <form:content>
                    <Text id="RejectReasonCheck">
                        <layoutData>
                            <l:GridData span="XL10 L10 M10 S12" linebreak="true" />
                        </layoutData>
                    </Text>
                </form:content>
            </form:SimpleForm>
        </content>
        <endButton>
            <Button text="확인" press="onCancelRejectReason" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

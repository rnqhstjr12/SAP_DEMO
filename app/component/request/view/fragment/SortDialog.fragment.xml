<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ViewSettingsDialog
        id="SortDialog"
        confirm="onConfirmSortDialog"
        title="물품 요청 정렬">
        <sortItems>
            <ViewSettingsItem text="요청 번호" key="request_number" selected="true"/>
            <ViewSettingsItem text="요청 물품" key="request_product"/>
            <ViewSettingsItem text="물품 개수" key="request_quantity"/>
            <ViewSettingsItem text="예상 가격" key="request_estimated_price"/>
            <ViewSettingsItem text="요청자" key="requestor"/>
            <ViewSettingsItem text="요청 일자" key="request_date"/>
            <ViewSettingsItem text="처리 상태" key="request_state"/>
        </sortItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>

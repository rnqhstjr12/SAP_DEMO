<mvc:View controllerName="project1.controller.app"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Image src="image/ui5-logo-light.svg" class="sapUiSmallMargin" height="30px" press="onHome"/>
                <MenuButton enabled="true" text="물품 요청" buttonMode="Split" defaultAction="onRequest">
                    <menu>
                        <Menu itemSelected="onMenuAction">
                            <MenuItem text="물품 요청" press="onRequest" />
                            <MenuItem text="물품 등록" press="onProduct" />
                        </Menu>
                    </menu>
                </MenuButton>
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:mainContents>
            <App class="myAppDemoWT" id="app">
            </App>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>

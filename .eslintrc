{
  "extends": "eslint:recommended",
  "env": {
    "es2022": true,
    "node": true,
    "jest": true,
    "mocha": true,
    "browser": true
  },
  "globals": {
    "SELECT": true,
    "INSERT": true,
    "UPSERT": true,
    "UPDATE": true,
    "DELETE": true,
    "CREATE": true,
    "DROP": true,
    "CDL": true,
    "CQL": true,
    "CXL": true,
    "cds": true,
    "sap": true,
    "jQuery": true,
    "$": true
  },
  "rules": {
    "no-console": "off",
    "require-atomic-updates": "off",
    "no-unused-vars": [2, {"vars":"all", "args":"none"}],
    "no-mixed-spaces-and-tabs": [2, "smart"]
    // "no-useless-escape": "off"
  }
}
